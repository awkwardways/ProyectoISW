@model PROYECTOISW.Models.ViewModel.CrearPropiedadViewModel


<h2>@ViewData["Title"]</h2>

<h4>Crear nueva Propiedad</h4>
<hr />

<div class="row">
    <div class="col-md-6">
        <form asp-action="CrearPropiedad">
            <div class="form-group">
                <label asp-for="Titulo" class="control-label"></label>
                <input asp-for="Titulo" class="form-control" />
                <span asp-validation-for="Titulo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Descripcion" class="control-label"></label>
                <textarea asp-for="Descripcion" class="form-control"></textarea>
                <span asp-validation-for="Descripcion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TipoPropiedad" class="control-label"></label>
                <input asp-for="TipoPropiedad" class="form-control" />
                <span asp-validation-for="TipoPropiedad" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PrecioRenta" class="control-label"></label>
                <input asp-for="PrecioRenta" class="form-control" />
                <span asp-validation-for="PrecioRenta" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Superficie" class="control-label"></label>
                <input asp-for="Superficie" class="form-control" />
                <span asp-validation-for="Superficie" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NumeroHabitaciones" class="control-label"></label>
                <input asp-for="NumeroHabitaciones" class="form-control" />
                <span asp-validation-for="NumeroHabitaciones" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NumeroBaños" class="control-label"></label>
                <input asp-for="NumeroBaños" class="form-control" />
                <span asp-validation-for="NumeroBaños" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Servicios" class="control-label"></label>
                <input asp-for="Servicios" class="form-control" />
                <span asp-validation-for="Servicios" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Direccion" class="control-label"></label>
                <input asp-for="Direccion" class="form-control" />
                <span asp-validation-for="Direccion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Distancia" class="control-label"></label>
                <input asp-for="Distancia" class="form-control" />
                <span asp-validation-for="Distancia" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CondicionesEspeciales" class="control-label"></label>
                <textarea asp-for="CondicionesEspeciales" class="form-control"></textarea>
                <span asp-validation-for="CondicionesEspeciales" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Crear" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts
{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}