@model PROYECTOISW.Models.ViewModel.CrearUsuariosViewModel


<h1 class="mb-5">Crear cuenta</h1>

<form asp-action="CrearUsuario" enctype="multipart/form-data">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="mb-3">
        <label asp-for="NombreCompleto" class="form-label"></label>
        <input asp-for="NombreCompleto" class="form-control" type="text" placeholder="Ingresar Nombre Nompleto"/>
        <span asp-validation-for="NombreCompleto" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="CorreoElectronico" class="form-label"></label>
        <input asp-for="CorreoElectronico" class="form-control" type="email" placeholder="Ingresar Correo Electrónico"/>
        <span asp-validation-for="CorreoElectronico" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Contraseña" class="form-label"></label>
        <input asp-for="Contraseña" class="form-control" type="password" placeholder="Ingresar Contraseña"/>
        <span asp-validation-for="Contraseña" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="RContraseña" class="form-label"></label>
        <input asp-for="RContraseña" class="form-control" type="password" placeholder="Ingresar Contraseña" />
        <span asp-validation-for="RContraseña" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Telefono" class="form-label"></label>
        <input asp-for="Telefono" class="form-control" type="tel" placeholder="Ingresar Teléfono"/>
        <span asp-validation-for="Telefono" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Foto" class="form-label"></label>
        <input asp-for="Foto" class="form-control" type="file" accept="image/*" />
    </div>
    <div class="mb-3">
        <button type="submit" class="btn btn-primary">Enviar</button>
    </div>
    @if (!string.IsNullOrEmpty(ViewBag.Contrase))
    {
        <div class="alert alert-danger" role="alert">
            @ViewBag.Contrase
        </div>
    }
 </form>

 @section Scripts
 {
     @{
         await Html.RenderPartialAsync("_ValidationScriptsPartial");
      }
 }