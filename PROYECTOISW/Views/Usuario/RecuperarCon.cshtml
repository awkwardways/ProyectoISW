@model PROYECTOISW.Models.ViewModel.RecuperarConViewModel

<h1>Recuperacion de Contraseña</h1>
<form asp-action="RecuperarCon">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="mb-5">
        <label asp-for="Correo" class="form-label"></label>
        <input asp-for="Correo" class="form-control" placeholder="Ingresar Correo Electrónico" type="email"/>
        <span asp-validation-for="Correo" class="text-danger"></span>
    </div>
    <div class="mb-5">
        <button type="submit" class="btn btn-danger">Enviar Código</button>
    </div>
</form>

@section Scripts
{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}