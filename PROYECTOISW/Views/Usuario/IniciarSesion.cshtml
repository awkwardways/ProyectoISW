@model PROYECTOISW.Models.ViewModel.IniciarSesionViewModel

<h1>Iniciar Sesión</h1>

<form asp-action="IniciarSesion">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="mb-5">
        <label asp-for="Correo" class="form-label"></label>
        <input asp-for="Correo" class="form-control" type="email" placeholder="Ingresar Correo"/>
        <span asp-validation-for="Correo" class="text-danger"></span>
    </div>
    <div class="mb-5">
        <label asp-for="Contraseña" class="form-label"></label>
        <input asp-for="Contraseña" class="form-control" type="password" placeholder="Ingresar Contraseña" />
        <span asp-validation-for="Contraseña" class="text-danger"></span>
    </div>
    <div class="mb-5">
       <a asp-action="RecuperarCon" class="">Olvide mi Contraseña</a>
    </div>
    <div class="mb-5">
        <button type="submit" class="btn btn-primary">Ingresar</button>
    </div>
    <div class="mb-5">
        <a asp-action="CrearUsuario" class="">Crear Cuenta</a>
    </div>
    @if (!string.IsNullOrEmpty(ViewBag.Invalido))
    {
        <div class="alert alert-danger" role="alert">
            @ViewBag.Invalido
        </div>
    }
</form>

@section Scripts
{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}