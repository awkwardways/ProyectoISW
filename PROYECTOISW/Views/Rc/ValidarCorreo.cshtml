@model PROYECTOISW.Models.ViewModels.RCViewModels.ValidarCorreoViewModel

<h1>Recuperacion de Contraseña</h1>
<form asp-action="ValidarCorreo" asp-controller="Rc" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="mb-5">
        <label asp-for="Correo" class="form-label"></label>
        <input asp-for="Correo" class="form-control" placeholder="Ingresar Correo Electrónico" type="email" />
        <span asp-validation-for="Correo" class="text-danger"></span>
    </div>
    <div class="mb-5">
        <button type="submit" class="btn btn-danger">Enviar Código</button>
    </div>
    <!-- Mensaje de error -->
    @if (!string.IsNullOrEmpty(ViewBag.Invalido))
    {
        <div class="alert alert-danger mt-3" role="alert">
            @ViewBag.Invalido
        </div>
    }
</form>

@section Scripts
{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}